---
interface Props {
	image_url: string,
    content_title: string,
    content_describe: string
}
const { image_url, content_title, content_describe} = Astro.props;
---
<div class="box">
    <div class="for-content">
        <div class="image-box-container">
            <img src={image_url}/>
        </div>
        <div class="content-box-container">
            <h3>{content_title}</h3>
            <p>{content_describe}</p>
        </div>
    </div>
    <div class="for-animation"></div>
</div>

<style>
    .box {
        position: relative;
        width: 100%;
        height: 250px;
        background-color: var(--color-sekunder);
        border-radius: 10px;
        --size: 0px;
        --opacity: 0%;
        overflow: hidden;
    }

    .for-animation{
        position: relative;
        left: -110px;
        top: -70px;
        width: var(--size);
        height: var(--size);
        opacity: var(--opacity);
        border-radius: 100%;
        background-color: var(--color-hover);
    }
    .for-content{
        display: grid;
    }

    .box:hover{
        animation-name: box-hover;
        animation-duration: 0.4s;
        --size: 600px;
        --opacity: 100%;
    }

    @keyframes box-hover{
        0%{
            --opacity: 100%;
            --size: 100px;
        }
        2%{
            --size: 110px;
        }
        4%{
            --size: 120px;
        }
