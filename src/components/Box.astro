        }
    }

    .image-box-container{
        position: absolute;
        width: 90%;
        height: 50%;
        margin: 5% 5% 5% 5%;
        border-radius: 5px;
        overflow: hidden;
        z-index: 100;
    }

    .image-box-container img{
        width: 100%;
    }

    .content-box-container{
        position: absolute;
        width: 90%;
        height: auto;
        max-height: 30%;
        top: 52%;
        margin: 0% 5% 5% 5%;
        color: var(--color-text);
        font-size: 14px;
        z-index: 100;
    }

    .content-box-container h3{
        font-size: 17px;
        margin-top: 8%;
        margin-bottom: 5%;
        z-index: 100;
    }

    .content-box-container p{
        margin-top: 0%;
        max-height: 50px;
        max-width: 100%;
        text-overflow: ellipsis;
        overflow: hidden;
        opacity: 70%;
        z-index: 100;
    }

    @media only screen and (max-width: 899px){
        .content-box-container p{
            margin-top: 5px;
            max-height: 50px;
            max-width: 90%;
            text-overflow: ellipsis;
            overflow: hidden;
            z-index: 100;
