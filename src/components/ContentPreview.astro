---
const {buttonDeck: deck, creator_name, creator_img, tittle, content_img, like, posted, view, prev_desc} = Astro.props
---

<div class="preview" onclick="window">
    <div class="flex">
        <img class="rounded-full w-9 h-9" src={creator_img}/>
        <a href="/porto" class="ps-3"><span class="sm:text-xl md:text-3sm lg:text-sm inline-blok align-middle text-gray-700 dark:text-gray-300">{creator_name}</span></a>
    </div>
    <br class="text-sm"/>
    <div class="sub-preview">
        <div>
            <h1 class="sm:text-5xl md:text-3xl lg:text-3xl leading-none tracking-tight text-gray-900 dark:text-white font-bold">{tittle}</h1>
            <p class="max-h-32 text-gray-500 sm:text-4xl md:text-lg dark:text-gray-400 text-ellipsis overflow-hidden line-clamp-3">{prev_desc}</p>
        </div>
        <img src={content_img}/>
    </div>
    <div class="flex lg:h-5 sm:h-10 mt-5">
        <img src="/write.svg" class="md:h-5 md:w-5 sm:h-7 sm:w-7"/>
        <p class="md:text-sm sm:text-2xl ms-2 me-7 text-gray-500 dark:text-gray-400">{posted}</p>
        <img src="/eye.svg" class="md:h-5 md:w-5 sm:h-7 sm:w-7"/>
        <p class="md:text-sm sm:text-2xl ms-2 me-7 text-gray-500 dark:text-gray-400">{view}</p>
        <img src="/heart.svg" class="md:h-4 md:w-4 sm:h-7 sm:w-7 mt-1"/>
        <p class="md:text-sm sm:text-2xl ms-2 me-7 text-gray-500 dark:text-gray-400">{like}</p>
    </div>
    <hr class="h-px my-8 bg-gray-200 border-0 dark:bg-gray-700">
</div>

<style>
    .preview{
        position: relative;
        width: 100%;
        height: 100%;
        padding: 10px;
    }
    .creator-profile{
        position: relative;
        height: 30px;
        aspect-ratio: 1/1;
        border-radius: 100%;
        background-color: blue;
        overflow: hidden;
    }
    .creator-profile img{
        width: 100%;
    }
    .sub-preview{
        position: relative;
        width: 100%;
        display: grid;
        grid-template-columns: 70% 30%;
    }
    .sub-preview img{
        position: relative;
        width: 100%;
        margin: 10px;
    }
    .button-deck{
        position: relative;
        top: 10px;
        width: 100%;
        display: grid;
        grid-template-columns: 30% 30% 30%;
        column-gap: 10%;
    }
    .button-deck .icon{
        position: relative;
        display: grid;
        grid-template-columns: 50% 50%;
        column-gap: 1px;
    }
    .button-deck img{
        position: relative;
        aspect-ratio: 1/1;
        top: -5px;
        display: inline-block;
    }
    #date-post{
        width: 150px;
    }
</style>