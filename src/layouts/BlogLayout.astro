---
import Header from "../components/MainHeader.astro"
import '../components/Purecss.scss'
//import CSS from "../components/Content.astro"
const {frontmatter} = Astro.props;
const headerHeight = "70px"
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{frontmatter.title}</title>
        <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    </head>
    <body> 
        <Header class="content-left" class2="head-height" height={headerHeight} displayMenu="none" displaySearch="none" displayMenuHor="blok"/>
        <div class="content">
            <p id="cat">{frontmatter.category}</p>
            <div class="content-head">
                <h1 class="title">{frontmatter.contentTitle}</h1>
                <p class="description"><span><a href="/porto">{frontmatter.author}</a></span> | <span>{frontmatter.publish}</span> | <span>{frontmatter.timeread}</span></p>
            </div>
            <br/>
            <slot/>
        </div>
    </body>
</html>

<style define:vars={{headerHeight}} is:global>
    body{
        background-color: #272727;
        margin: 0px;
        width: 100%;
        font-family: 'Roboto';
        color: #bababa;
    }
    .content{
        position: absolute;
        top: var(--headerHeight);
    }
    #cat{
        position: relative;
        top: 30px;
    }
    .content-left{
        left: 25%;
    }
    .head-height{
        height: 70px;
        min-width: 1000px;
    }
    .content-head{
        position: relative;
    }
    h1{
        color: antiquewhite;
    }
    img{
        width: 100%;
    }
    .title{
        font-weight: 900;
        font-size: 2.9vw;
    }
    .description{
        font-size: 1.2vh;
    }

    @media (pointer: coarse)  {
	/* mobile device */
        .content{
            width: 90%;
            left: 5%;
        }
        .content-left{
            left: 5%;
            font-size: 2.5vw;
        }
        .head-height{
            height: 120px;

        }
        #cat{
            position: relative;
            top: 30px;
        }
        .title{
            font-size: 8vw !important;
        }
        p{
            font-size: 3vw !important;
        }
        h2{
            font-size: 4vw;
        }
    }

    @media (pointer: fine), (pointer: none) {
	/* desktop */
        .content{
            width: 1000px;
            left: calc((100% - 1000px)/2);
        }
        .content-left{
            left: calc((100% - 1000px)/2);
        }
        .head-height{
            height: 70px;
        }
        #cat{
            position: relative;
            top: 20px;
        }
        .title{
            font-size: 3em !important;
        }

        @media only screen and (max-width: 999px) {
            .content{
                left: 0px;
            }
            .content-left{
                left: 0px;
            }
        }
    }

    
</style>