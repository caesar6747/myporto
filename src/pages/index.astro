---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
import Banner from '../components/banner/BannerGrid.astro'
import Footer from '../components/MainFooter.astro'
export const prerender = false
---

<Layout title="Welcome to Astro.">
	<div class="w-full">
		<Banner>
			<div >
				<h1 class="absolute w-full text-center text-amber-50 md:text-5xl lg:text-6xl font-extrabold top-44">Build Your World With Technology</h1>
				<h2 class="absolute w-full text-center text-amber-50 md:text-2xl lg:text-3xl font-bold top-64">join us, <mark class="text-white rounded-lg px-4 bg-purple-900">write</mark> and share your knowledge</h2>
				<div class="flex w-full justify-center">
					<button type="button" onclick="window.location.href='/beranda'" class="absolute max-h-10 mt-10 top-72 text-black bg-white hover:bg-purple-300 font-medium rounded-lg text-sm px-5 py-3 dark:bg-white dark:hover:bg-purple-200">Get Started</button>
				</div>
			</div>
		</Banner>
	</div>

	<br/>
	<main>
		<div id="welcome-content" class="">
			<h1 class="text-5xl my-20 font-bold">Welcome to <span class="text-gradient">Engineering Sample</span></h1>
			<p class="instructions">
				Engineering Sample is a <span class="font-bold">content-based</span> website built with the purpose of sharing knowledge about technology. You can join as a writer to share your knowledge or as a reader to explore and gain knowledge.
			</p>
			<ul role="list" class="link-card-grid">
				<Card
					href="https://github.com/caesar6747/myporto"
					title="Documentation"
					body="This website is under construction. check the github"
				/>
				<Card
					href="https://astro.build/integrations/"
					title="Integrations"
					body="Supercharge your project with new frameworks and libraries."
				/>
				<Card
					href="https://astro.build/themes/"
					title="Themes"
					body="Explore a galaxy of community-built starter themes."
				/>
				<Card
					href="https://astro.build/chat/"
					title="Community"
					body="Come say hi to our amazing Discord community. ❤️"
				/>
				<!-- <Box
					image_url='https://place.dog/200/200'
					content_title='ini content'
					content_describe='this content is contain a container that build for testing'
				/> -->
			</ul>
		</div>
	</main>
	<Footer/>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
	#welcome-content{
		opacity: 0%;
	}
	@keyframes appear{
		0%{
			position: relative;
			left: 100px;
			opacity: 0%;
		}
		100%{
			position: relative;
			left: 0px;
			opacity: 100%;
		}
	}
</style>

<script is:inline>
	window.addEventListener("scroll", function(event) {
		//console.log(this.scrollY)
		if(this.scrollY > 300){
			const a = this.document.getElementById('welcome-content')
			a.style.animationName = "appear"
			a.style.animationDuration = "2s"
			a.style.opacity = "100%"
		}
	}, false);
</script>
